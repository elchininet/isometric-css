{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "commonjs",
      "target": "es5",
      "moduleResolution": "node",
      "declaration": true,
      "noImplicitAny": true,
      "removeComments": true,
      "baseUrl": "./src",
      "paths": {
        "@types": ["@types"],
        "@constants": ["constants"],
        "@utilities": ["utilities"],
        "@dom": ["dom"]
      }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }