{
  "name": "isometric-css",
  "version": "2.2.3",
  "description": "A lightweight JavaScript library to build isometric projections through declarative HTML attributes",
  "keywords": [
    "isometric",
    "projection",
    "isometric-projection",
    "css",
    "isometric-css",
    "draw",
    "drawing",
    "engineering",
    "engineering-drawing",
    "coordinates",
    "graphics",
    "typescript"
  ],
  "license": "Apache-2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "@types/**/*",
    "constants/**/*",
    "dom/**/*",
    "utilities/**/*",
    "index.d.ts",
    "index.js",
    "index.js.LICENSE.txt"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elchininet/isometric-css"
  },
  "author": "ElChiniNet",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "build": "webpack && tsconfig-replace-paths -p tsconfig.json -s ./src -o ./dist",
    "copy": "cp -r ./dist/. ./",
    "lint": "eslint src/**/*.ts",
    "test": "jest --verbose",
    "prepare": "yarn build && yarn copy",
    "prepublishOnly": "npm run lint",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.2",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "clean-webpack-plugin": "^4.0.0",
    "coveralls": "^3.1.1",
    "eslint": "^7.32.0",
    "jest": "^27.2.0",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.5",
    "tsconfig-replace-paths": "^0.0.5",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0"
  }
}
