{
  "name": "isometric-css",
  "version": "2.2.3",
  "description": "A lightweight JavaScript library to build isometric projections through declarative HTML attributes",
  "keywords": [
    "isometric",
    "projection",
    "isometric-projection",
    "css",
    "isometric-css",
    "draw",
    "drawing",
    "engineering",
    "engineering-drawing",
    "coordinates",
    "graphics",
    "typescript"
  ],
  "license": "Apache-2.0",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elchininet/isometric-css"
  },
  "author": "ElChiniNet",
  "private": false,
  "sideEffects": false,
  "scripts": {
    "build": "yarn clean && rollup --config rollup.config.js && yarn copy",
    "clean": "rimraf dist index.js index.d.ts",
    "copy": "mkdir dist && cp index.js dist/index.js",
    "lint": "eslint src/**/*.ts",
    "test": "jest --verbose",
    "prepare": "yarn build",
    "prepublishOnly": "yarn lint && yarn test",
    "version": "git add .",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/jest": "^29.0.3",
    "@types/node": "^18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "coveralls": "^3.1.1",
    "eslint": "^8.23.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^3.0.2",
    "ts-jest": "^29.0.1",
    "typescript": "^4.8.3"
  }
}
